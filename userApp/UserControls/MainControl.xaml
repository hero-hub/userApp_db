<UserControl x:Class="userApp.UserControls.MainControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:userApp.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">

            <!-- Авторизация -->
            <Button Content="Вход" Command="{Binding ShowLoginCommand}" Width="100" Margin="10" />
            
            <!-- Регистрация -->
            <Button Content="Регистрация" Command="{Binding ShowRegistrationCommand}" Width="100" Margin="10" />

        </StackPanel>
    </Grid>
</UserControl>
